#include <stdio.h>

int main() {
    char op;
    double num1, num2, result;
    
    printf("Enter an expression (e.g., 5 + 3): ");
    
    if (scanf("%lf", &num1) != 1) {
        printf("Error reading the first number.\n");
        return 1;
    }

    if (scanf(" %c", &op) != 1) {
        printf("Error reading the operator.\n");
        return 1;
    }

    if (scanf("%lf", &num2) != 1) {
        printf("Error reading the second number.\n");
        return 1;
    }

    switch (op) {
        case '+':
            result = num1 + num2;
            printf("Result: %lf\n", result);
            break;
        case '-':
            result = num1 - num2;
            printf("Result: %lf\n", result);
            break;
        case '*':
            result = num1 * num2;
            printf("Result: %lf\n", result);
            break;
        case '/':
            if (num2 != 0) {
                result = num1 / num2;
                printf("Result: %lf\n", result);
            } else {
                printf("Error: Division by zero.\n");
            }
            break;
        default:
            printf("Error: Invalid operator.\n");
            break;
    }

    return 0;
}
